<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Select Genre"
             x:Class="Data_Binding.Views.AddGenre">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Text="Action"/>
                <CheckBox x:Name="Action" x:Uid="Action" CheckedChanged="Action_CheckedChanged"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Comedy"/>
                <CheckBox x:Name="Comedy" CheckedChanged="Comedy_CheckedChanged"/>
            </StackLayout>
            <Button Text="Submit" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>